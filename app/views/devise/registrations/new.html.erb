

  <% if resource.is_a?(WebAdmin) %>
<h2>Sign up</h2>
  <% elsif resource.is_a?(Admin) %>
<h2> Registration Form</h2>
<%end%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <% if resource.is_a?(Admin) %>
    <div class="field">
      <br />
      <%= f.text_field :school_name, :placeholder=>"Institute/College/SchoolName" %>
    </div>
  <%end%>

  <div class="field">
         <br />
    <%= f.text_field :name, :placeholder => "FullName"%>
  </div>

  <div class="field">
   <br />
    <%= f.email_field :email, autofocus: true,:placeholder => "Email Id" %>
  </div>

  <div class="field">
      <br />
    <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:placeholder => "Password" %>
  </div>

  <div class="field">
 <br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:placeholder => "Retype Password" %>
  </div>

  <% if resource.is_a?(Admin) %>
    <div class="field">
      <br />
      <%= f.text_field :address1, :placeholder=>"AddressLine1" %>
    </div>
    <div class="field">
      <br />
      <%= f.text_field :address2, :placeholder=>"AddressLine2" %>
    </div>

    <div class="field">
      <br />
      <%= f.text_field :city, :placeholder=>"City" %>

      <%= f.text_field :state, :placeholder=>"State" %>
      <%= f.text_field :zipcode, :placeholder=>"Pincode/Zipcode" %>
    </div>

    <div class="field">
      <br />
      <%= f.text_field :mobile_no, :placeholder=>"Mobile No" %>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
