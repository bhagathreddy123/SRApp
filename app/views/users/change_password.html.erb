<%= form_for @user, :url=> reset_password_user_path(:id=> current_user.id), :method => "put" do |f| %>

  <div>
    <%= f.password_field :current_password, :autocomplete => "off", class: "sitewide-input", placeholder: "Old Password" %>
    </div>


    <div class="form-group">
      <%=f.password_field :password,:placeholder=>"New Password"%>
    </div>
    <div class="form-group">
      <%=f.password_field :password_confirmation,:placeholder=>"Re-Type Password"%>
    </div>

    <%=f.submit%>
  <%end%>